<Window x:Class="tomcat_easy_copy.deleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tomcat_easy_copy"
        mc:Ignorable="d"
        Title="Easy TomCat" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu Margin="0,0,0,282">
            <MenuItem x:Name="MenuItemFile" Height="23" Width="66" Header="Copy" FontSize="16" Click="MenuItemFile_Click"/>
            <MenuItem x:Name="MenuItemView" Height="23" Width="86" FontSize="16" Header="Delete"/>
        </Menu>
        <ComboBox x:Name="FoldercomboBox" HorizontalAlignment="Left" Margin="117,42,0,0" VerticalAlignment="Top" Width="308"/>
        <ComboBox x:Name="WarFilecomboBox" HorizontalAlignment="Left" Margin="117,69,0,0" VerticalAlignment="Top" Width="308"/>
        <Label x:Name="FolderLabel" Content="Folder to delete:" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top"/>
        <Label x:Name="FileLabel" Content="File to delete:" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top"/>
        <Button x:Name="deleteButton" Content="Delete" HorizontalAlignment="Left" Margin="16,108,0,0" VerticalAlignment="Top" Width="75" Click="deleteButton_Click"/>
    </Grid>
</Window>
